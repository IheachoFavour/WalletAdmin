@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="login-fullscreen">
    <div class="login-card">
        <h1 style="color: #fff; margin-bottom: 30px; text-shadow: 
            0 0 12px rgba(169,255,242, 0.8),
            0 0 24px rgba(169,255,242, 0.5);">
            Create Account
        </h1>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>

        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-floating mb-4">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" type="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-5">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" type="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button id="registerSubmit" type="submit" class="btn btn-login w-100"
                style="
                    background: rgba(169, 255, 242, 0.12);
                    backdrop-filter: blur(12px);
                    -webkit-backdrop-filter: blur(12px);
                    border: 1px solid rgba(169, 255, 242, 0.28);
                    border-radius: 14px;
                    color: #A9FFF2;
                    font-weight: 700;
                    font-size: 1.1rem;
                    padding: 1rem 1.5rem;
                    box-shadow: 0 8px 25px rgba(169, 255, 242, 0.2);
                    transition: all 0.3s ease;
                "
                onmouseover="this.style.background='rgba(169, 255, 242, 0.22)'; this.style.boxShadow='0 14px 35px rgba(169, 255, 242, 0.35)'; this.style.transform='translateY(-2px)';"
                onmouseout="this.style.background='rgba(169, 255, 242, 0.12)'; this.style.boxShadow='0 8px 25px rgba(169, 255, 242, 0.2)'; this.style.transform='translateY(0)';">
                Register
            </button>
        </form>

        <div class="links mt-4 text-center">
            <a asp-page="/Account/Login">Already have an account? Sign in</a>
        </div>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            width: 100%;
            overflow: hidden;
            background: transparent;
        }

        .form-check-label {
            color: #A9FFF2;
        }

        .login-fullscreen {
            position: fixed;
            inset: 0;
            width: 100vw;
            height: 100vh;
            background: 
                radial-gradient(circle at 15% 25%, rgba(169,255,242,0.12), transparent 45%),
                radial-gradient(circle at 85% 80%, rgba(169,255,242,0.09), transparent 45%),
                #000000;
            background-attachment: fixed;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
        }

        .login-card {
            width: 100%;
            max-width: 420px;
            padding: 3.4rem 2.7rem;
            background: rgba(10, 15, 25, 0.18);
            backdrop-filter: blur(28px) saturate(220%);
            -webkit-backdrop-filter: blur(28px) saturate(220%);
            border: 1px solid rgba(169, 255, 242, 0.25);
            border-radius: 26px;
            box-shadow: 
                0 35px 80px rgba(0, 0, 0, 0.65),
                inset 0 0 0 1px rgba(169, 255, 242, 0.12),
                inset 0 4px 20px rgba(169, 255, 242, 0.04);
            isolation: isolate;
        }

        h1 {
            color: white;
            text-align: center;
            font-size: 2.6rem;
            font-weight: 700;
            margin-bottom: 2.5rem;
            text-shadow: 0 0 25px rgba(169,255,242,0.45);
        }

        .form-control {
            background: rgba(30, 35, 40, 0.8);
            border: 1px solid rgba(169,255,242,0.25);
            color: white;
            border-radius: 10px;
            padding: 1.5rem 1rem 0.6rem;
        }

        .form-control:focus {
            border-color: #A9FFF2;
            box-shadow: 0 0 0 3px rgba(169,255,242,0.2);
            background: rgba(40,45,50,0.9);
        }

        .form-control::placeholder {
            color: rgba(169,255,242,0.5);
        }

        .form-floating > label {
            color: #000;
        }

        .form-floating > .form-control:focus ~ label,
        .form-floating > .form-control:not(:placeholder-shown) ~ label {
            color: #A9FFF2;
        }

        .btn-login {
            background: rgba(169, 255, 242, 0.12);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
            border: 1px solid rgba(169, 255, 242, 0.28);
            border-radius: 14px;
            color: #A9FFF2;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 1rem 1.5rem;
            box-shadow: 0 8px 25px rgba(169, 255, 242, 0.2);
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            background: rgba(169, 255, 242, 0.22);
            box-shadow: 0 14px 35px rgba(169, 255, 242, 0.35);
            transform: translateY(-2px);
        }

        .links a {
            color: #A9FFF2;
            text-decoration: none;
        }

        .links a:hover {
            color: white;
            text-shadow: 0 0 10px #A9FFF2;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}