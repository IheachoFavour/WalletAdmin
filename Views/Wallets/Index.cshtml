@model IEnumerable<WalletAdmin.Models.Wallet>

@{
    ViewData["Title"] = "Index";
}

<div class="page-wrapper mt-4">
<div class="d-flex justify-content-between align-items-center mt-15 mb-4">
    <h2 class="fw-bold text-dark">Wallets</h2>

    <a asp-action="Create"
       class="btn d-flex align-items-center gap-2"
       style="background: linear-gradient(135deg, #ffff 0%, #7CFFE4 100%);
            color: #0a1a18;
            font-weight: 700;">
        <i class="bi bi-plus-lg"></i>
        Create New Wallet
    </a>
</div>
<div class="card bg-light bg-opacity-100 border border-info border-opacity-100 shadow-lg">
    <div class="table-responsive">
        <table class="table table-light table-hover align-middle mb-0">
            <thead class="text-uppercase text-info small">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Currency)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Balance)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Customer)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UpdatedAt)
                    </th>
                    <th>Actions</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreatedAt)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Currency)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Balance)
                            </td>
                            <td class="text-info">
                                @Html.DisplayFor(modelItem => item.Customer.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UpdatedAt)
                            </td>
                            <td>
                                <a asp-controller="Transactions"
                                asp-action="ByWallet"
                                asp-route-walletId="@item.WalletId"
                                class="btn btn-sm btn-outline-primary">
                                    Transactions
                                </a> 
                                @*<a asp-action="Delete"
                                    asp-route-id="@item.WalletId"
                                    class="btn btn-outline-danger"
                                    data-bs-toggle="tooltip"
                                    title="Delete wallet">
                                    <i class="bi bi-trash"></i>
                                </a>*@
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Styles {
    <link rel="stylesheet"
          href="~/css/Index.css"
          asp-append-version="true" />
}
