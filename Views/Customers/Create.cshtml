@model WalletAdmin.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<div class="create-container">
    <div class="glass-form-card">
        <h1 class="form-title">New Customer</h1>

        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

        <form asp-action="Create">
            <div class="form-floating mb-4">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <label asp-for="FirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="LastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-4">
                <input asp-for="Email" class="form-control" placeholder="name@example.com" autocomplete="email" />
                <label asp-for="Email">Email Address</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-submit w-100">
                Create Customer
            </button>
        </form>

        <div class="mt-4 text-center">
            <a asp-action="Index" class="back-link">‚Üê Back to Customers List</a>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet"
          href="~/css/customer-create.css"
          asp-append-version="true" />
}


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}