@model WalletAdmin.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<div class="delete-container">
    <div class="glass-form-card">
        <h1 class="form-title">Delete Customer</h1>
        <p class="form-subtitle">Are you sure you want to delete this customer?</p>

        <div class="customer-details mt-4 mb-5">
            <div class="detail-row">
                <span class="detail-label">First Name</span>
                <span class="detail-value">@Model.FirstName</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Last Name</span>
                <span class="detail-value">@Model.LastName</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Email</span>
                <span class="detail-value">@Model.Email</span>
            </div>
            <div class="detail-row">
                <span class="detail-label">Created At</span>
                <span class="detail-value">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</span>
            </div>
        </div>

        <form asp-action="Delete" class="text-center">
            <input type="hidden" asp-for="CustomerId" />

            <div class="action-buttons">
                <button type="submit" class="btn btn-delete">
                    Yes, Delete Customer
                </button>

                <a asp-action="Index" class="btn btn-cancel ms-3">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        html, body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden !important;
            background: #ffffff;
        }

        .delete-container {
            height: 100vh;
            background: #ffffff;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
        }

        .glass-form-card {
            width: 100%;
            max-width: 520px;
            padding: 3.5rem 3rem;
            background: rgba(255, 255, 255, 0.75);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border: 1px solid rgba(169, 255, 242, 0.18);
            border-radius: 24px;
            box-shadow: 
                0 20px 60px rgba(0, 0, 0, 0.12),
                inset 0 0 0 1px rgba(255, 255, 255, 0.4);
            transition: transform 0.4s ease;
        }

        .glass-form-card:hover {
            transform: translateY(-8px);
        }

        .form-title {
            color: #e74c3c; /* Red accent for delete action */
            font-size: 2.4rem;
            font-weight: 700;
            text-align: center;
            margin-bottom: 0.5rem;
        }

        .form-subtitle {
            color: #666;
            text-align: center;
            font-size: 1.05rem;
            margin-bottom: 2rem;
        }

        .customer-details {
            background: rgba(245, 245, 245, 0.6);
            border-radius: 12px;
            padding: 1.5rem;
            margin-bottom: 2rem;
        }

        .detail-row {
            display: flex;
            justify-content: space-between;
            padding: 0.9rem 0;
            border-bottom: 1px solid #eee;
        }

        .detail-row:last-child {
            border-bottom: none;
        }

        .detail-label {
            font-weight: 600;
            color: #555;
            min-width: 140px;
        }

        .detail-value {
            color: #333;
            text-align: right;
            flex: 1;
        }

        .action-buttons {
            display: flex;
            justify-content: center;
            gap: 1.5rem;
        }

        .btn-delete, .btn-cancel {
            padding: 0.9rem 2.2rem;
            font-weight: 700;
            font-size: 1.1rem;
            border-radius: 12px;
            transition: all 0.35s ease;
        }

        .btn-delete {
            background: linear-gradient(135deg, #ff6b6b 0%, #ff8c8c 100%);
            color: white;
            border: none;
            box-shadow: 0 6px 20px rgba(255, 107, 107, 0.35);
        }

        .btn-delete:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(255, 107, 107, 0.55);
        }

        .btn-cancel {
            background: transparent;
            color: #A9FFF2;
            border: 1px solid #A9FFF2;
            text-decoration: none;
        }

        .btn-cancel:hover {
            background: rgba(169, 255, 242, 0.1);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(169, 255, 242, 0.25);
        }
    </style>
}